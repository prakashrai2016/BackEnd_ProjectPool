@model ProjectPool.DataEntity.Read

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Scripts/ProjectPool/Tag.js"></script>

<div class="pageHeading"><span class="standardFont" style="margin-left:10px;vertical-align:middle;">Reads</span>
    <div style="float:right; vertical-align:middle; margin-right:10px;">
        <button style="border-radius:3px; cursor:pointer;" class="standardFont" id="btnList">List</button>
        <button style="border-radius:3px; cursor:pointer;" class="standardFont" id="btnSaveRead">Save</button>
        <button style="border-radius:3px; cursor:pointer;" class="standardFont">Delete</button>
    </div>
        
</div>

<div id="dialog_progress" style="display:none;">
	<img src="~/Contents/images/ajax-loaderLarge.gif" style="    width: 70px; height: 70px; margin-left: 30px; margin-top: 18px; margin-bottom: 6px;"/>
	<p style="text-align: center; font-size: 11;">Loading..</p>
</div>

<div class="standardFont" style="width:99%; border: 1px #808080 solid; border-radius:5px; padding:5px; margin:5px auto;">
    @using (Html.BeginForm("New", "Read", FormMethod.Post, new { @id = "ReadForm", @enctype = "multipart/form-data" }))
    {
        <table class="form" style="width:100%;">
            <tbody>
                <tr>
                    <td>
                        <label><b>Article Name</b></label>
                        @Html.TextBoxFor(x => x.Topic, new { @style="width:100%;", @class = "mandatory"})
                        <hr />
                    </td>
                    
                </tr>

                <tr>
                    <td>
                        <label><b>URL</b></label>
                        @Html.TextBoxFor(x => x.Url, new { @style="width:100%;", @class = "mandatory"})
                        <hr />
                    </td>
                    
                </tr>

                <tr>
                    <td>
                        <label><b>Reference</b></label>
                        @Html.TextBoxFor(x => x.Reference, new { @style="width:100%;", @class = "mandatory"})
                        <hr />
                    </td>
                    
                </tr>
                    
                <tr>
                    <td>
                        <label><b>Short Description</b></label>
                        @Html.TextAreaFor(x => x.Description, new { @style="width:100%; height: 100px;"})
                        <hr />
                    </td>
                </tr>
            
                <tr>
                    <td>
                        <label style="margin-right:10px;"><b>Read Image</b></label><br />
                        <input type="file" name="uploadReadImage" id="FileUpload"  class = "mandatory" class="textBox" value="" tabindex="2" onchange="readURL(this);"/>
                        <img src="" alt="" class ="uploadfile" style="cursor: pointer; height:150px;width:auto; display:none;"/>
                        <hr />
                    </td>
                </tr>

            </tbody>
        </table>
    
            
    }

</div>

<script src="~/Scripts/ProjectPool/Read.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        EndAjaxLoading();
    });
    //CKEDITOR.replace('ShortDescription');
    // CKEDITOR.replace('Discription');
    //CKEDITOR.replace('References');


    $(".uploadfile").click(function () {
        $("#FileUpload").trigger('click');
    });

    function readURL(input) {
        if (input.files) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('.uploadfile')
                    .attr('src', e.target.result);
            };
            $('.uploadfile').css("display", "block");
            reader.readAsDataURL(input.files[0]);
        }
    }

</script>

