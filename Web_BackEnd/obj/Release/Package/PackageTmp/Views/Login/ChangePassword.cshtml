@model ProjectPool.Models.LoginViewModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pageHeading"><span class="standardFont" style="margin-left:10px;vertical-align:middle;">Change Password</span>
   
</div>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.username)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.username)
            @Html.ValidationMessageFor(model => model.username)
        </div>

        <div class="editor-label">
            Old Password
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.password)
            @Html.ValidationMessageFor(model => model.password)
        </div>

        <div class="editor-label">
            New Password
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.newPassword)
            @Html.ValidationMessageFor(model => model.newPassword)
        </div>
        
        <div class="editor-label">
            Confirm Password
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.confirmPassword)
            @Html.ValidationMessageFor(model => model.confirmPassword)
        </div>


        <p>
            <input type="submit" value="Create" onclick="ConfirmPassword();"/>
        </p>
    </fieldset>
}
<script>
    function ConfirmPassword()
    {
        var result = false;
        var newPassword = $('#newPassword').val();
        var confirmPassword = $('#confirmPassword').val();

        if (newPassword == confirmPassword) {
            result = true
        }
        else {
            alert("New Passwords Doesn't match.");
        }
        return result;
    }
</script>